{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="content">
    <ul>

        {% for p in products %}
            <li>
                {{ p.name }}<br />
                {{ p.description }}<br />
                {{ p.available }}<br />
                <a href="#">Order</a>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
